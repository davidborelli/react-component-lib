{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noEmit": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "jsx": "react"
  },
  // "include": ["**/*.ts", "**/*.tsx"],
  "include": ["src/**/*", "**/*.ts"],
  "exclude": ["node_modules"]
}
